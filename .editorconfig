root = true

[*]
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.{xml,config,*proj,nuspec,props,resx,targets,yml,tasks}]
indent_size = 2

[*.{json,js,ts}]
indent_size = 2

[*.{ps1,psm1}]
indent_size = 4

[*.sh]
indent_size = 2
end_of_line = lf

[*.cs]
indent_size = 4

[*.sln]
charset = utf-8-bom
indent_style = tab

[{.vscode/**,**/Properties/launchSettings.json,*.[sS]ecret.*}]
indent_size = unset
insert_final_newline = unset
